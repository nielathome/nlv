<root>

  <!--
  Example style set - for MythTV
  The style file can contain any number of "style" elements, guids must be unique.
  -->

  <styleset name="MythTV" guid="C8B802B0-FE05-4F38-A20D-E9E3573B8BDD">

    <!--
    A styleset is a collection of named styles
    Each style determines a set of character properties: bold, italic, underline, foreground colour.
    The default is plain black text.
    -->

    <style name="fieldtext">
      <italic>1</italic>
    </style>

    <style name="value">
      <bold>1</bold>
    </style>

    <style name="dimmed">
      <bold>1</bold>
      <fore>PLUM</fore>
    </style>

    <style name="strongvalue">
      <bold>1</bold>
      <fore>TOMATO</fore>
    </style>

  </styleset>
  
</root>
